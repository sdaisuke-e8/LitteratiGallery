<div class="main users-edit">
  <div class="container">
    <div class="form-heading">ユーザー情報の編集</div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

        <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.label :ユーザー名 %>
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <%= f.label :メールアドレス %>
            <%= f.text_field :email %>
          </div>
          <div class="form-group">
            <%= f.label :プロフィール %>
            <%= f.text_field :profile %>
          </div>

          <%= f.submit "保存" %>
        <% end %>

      </div>
    </div>
  </div>
</div>
