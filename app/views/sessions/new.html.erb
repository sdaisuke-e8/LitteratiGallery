<div class="main users-new">
  <div class="container">
    <div class="contents">
      <div class="form-heading">ログイン</div>
      <div class="form users-form">
        <div class="form-body">
          <% if @error_message %>
            <div class="form-error">
              <%= @error_message %>
            </div>
          <% end %>

          <%= form_for :session, url: login_path do |f| %>
            <div class="form-group">
              <%= f.label :メールアドレス %>
              <%= f.text_field :email %>
            </div>
            <div class="form-group">
              <%= f.label :パスワード %>
              <%= f.password_field :password %>
            </div>

            <%= f.submit "ログイン" %>
          <% end %>
          <%= link_to '新規登録はこちら', '/signup' %>

        </div>
      </div>
    </div>
  </div>
</div>
