<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
    <div class="form">
      <div class="form-body">
        <% @post.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

        <%= form_for @post do |f| %>
          <div class="form-group">
            <%= f.label :画像 %>
            <%= f.file_field :image %>
          </div>
          <div class="form-group">
            <%= f.label :概要 %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>

          <%= f.submit "投稿" %>
        <% end %>

      </div>
    </div>
  </div>
</div>
